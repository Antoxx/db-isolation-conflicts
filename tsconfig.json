{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "outDir": "dist",
    "baseUrl": "src",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
